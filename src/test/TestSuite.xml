<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sample App Login Test" verbose="1">
    <test name="Sample app - valid credential test" parallel="none">
        <classes>
            <class name="tests.SampleAppValidCredentialTest"/>
        </classes>
    </test>
    <test name="Sample app - invalid credential test" parallel="none">
        <classes>
            <class name="tests.SampleAppInvalidCredentialTest"/>
        </classes>
